{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": [ "./index.js", "./lib/*.js", "./lib/**/*.js" ],
    "exclude": [ "./node_modules/*" ]
}
